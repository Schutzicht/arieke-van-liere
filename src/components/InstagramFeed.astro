<script>
    const feed = document.getElementById('insta-feed');
    if (feed && window.matchMedia('(max-width: 768px)').matches) {
        let scrollAmount = 0;
        setInterval(() => {
            if (feed.scrollLeft + feed.clientWidth >= feed.scrollWidth - 10) {
                feed.scrollTo({ left: 0, behavior: 'smooth' });
            } else {
                feed.scrollBy({ left: feed.clientWidth / 2, behavior: 'smooth' });
            }
        }, 4000);
    }
</script>
