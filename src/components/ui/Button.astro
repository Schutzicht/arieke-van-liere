---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'white';
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  [key: string]: any;
}

const { 
  href, 
  variant = 'primary', 
  class: className = '', 
  type = 'button',
  ...rest 
} = Astro.props;

const baseStyles = "inline-flex items-center justify-center px-8 py-3 rounded-full font-medium transition-all duration-300 transform hover:-translate-y-1";

const variants = {
  primary: "bg-brand-pink text-white hover:shadow-lg hover:shadow-brand-pink/30",
  secondary: "bg-brand-green text-white hover:shadow-lg hover:shadow-brand-green/30",
  outline: "border-2 border-brand-pink text-brand-pink hover:bg-brand-pink hover:text-white",
  white: "bg-white text-brand-pink hover:shadow-lg"
};

const Element = href ? 'a' : 'button';
---

<Element 
  href={href} 
  type={!href ? type : undefined}
  class:list={[baseStyles, variants[variant], className]}
  {...rest}
>
  <slot />
</Element>
